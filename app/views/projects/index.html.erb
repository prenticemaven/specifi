<div class="row">
  <div class="col-xs-6 col-md-10">
	  <p class="lead">This is the list of all your projects.</p>
	</div>
	<div class="col-xs-6 col-md-2">
		<%= link_to "#",
								class: "btn btn-default",
								data:{
									toggle:"modal",
									target:"#project-modal",
									remote: "#{new_project_path} #project-form"
								} do %>

								<%= fa_icon "plus" %> New Product
		<% end %>
	</div>
</div>

<div class="row">
	<div id="project-list">
		<div class="row table-header">
			<div class="col-xs-8 hidden-sm hidden-xs">
				<div class="row">
					<div class="col-md-4">
						<h5><small>NAME</small></h5>
					</div>
					<div class="col-md-4">
						<h5><small>CONTACT PERSON</small></h5>
					</div>
					<div class="col-md-4">
						<h5><small>PHONE</small></h5>
					</div>
				</div>
			</div>
		</div>
		<% @projects.each do |project| %>
			<div id='<%= "project-#{project.id}" %>' class="row project-list-item">
				<%= render partial: "project_row", locals: { project: project } %>
			</div>
		<% end %>
	</div>

	<div class="modal fade" id="project-modal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
			</div>
		</div>
	</div>
</div>
