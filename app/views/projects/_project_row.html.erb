<div class="col-md-6">
  <div class="bs-callout bs-callout-info">
    <div class="row">
      <div class="col-xs-10">
        <h4><%= project.name %></h4>
        <p><%= project.contact_person %></p>
        <p><%= project.contact_number %></p>
        <p><%= project.address %></p>
      </div>
      <div class="col-xs-2">
        <%= link_to content_tag(:i, '', class: "fa fa-edit"), "#",
                    data:{
                      toggle:"modal",
                      target:"#project-modal",
                      remote: "#{edit_project_path(project)} #project-form"
                    } %>

        <%= link_to content_tag(:i, '', class: "fa fa-trash-o"), project,
                    remote: true, confirm: 'Are you sure?', method: :delete %>
      </div>
    </div>
  </div>
</div>
