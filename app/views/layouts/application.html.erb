<!DOCTYPE html>
<html>
<head>
  <title>Specifi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'sidebar' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand"><a href="#">SPECIFI</a></li>
        <li>
          <div class="row">
            <div class="img-circular col-xs-6 col-xs-offset-4"></div>
          </div>
          <br>
        </li>
        <li><%= link_to content_tag(:i, ' Dashboard', class: "fa fa-dashboard"), projects_path %></li>
        <li><%= link_to content_tag(:i, ' Projects', class: "fa fa-bars"), projects_path %></li>
        <li><%= link_to content_tag(:i, ' Materials', class: "fa fa-archive"), projects_path %></li>
        <li><%= link_to content_tag(:i, ' Profile', class: "fa fa-user"), projects_path %></li>
        <li><%= link_to content_tag(:i, ' Settings', class: "fa fa-cog"), projects_path %></li>
        <li><%= link_to content_tag(:i, ' Logout', class: "fa fa-sign-out"), destroy_user_session_path, method: :delete %></li>

      </ul>
    </div>


    <div id="page-content-wrapper">
      <div class="content-header">
      <h1>
        <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
        My Projects
      </h1>
    </div>
    <!-- Keep all page content within the page-content inset div! -->
    <div class="page-content inset">
      <%= yield %>
    </div>
  </div>

    <!-- Custom JavaScript for the Menu Toggle -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });

    $('body').on('hidden.bs.modal', '.modal', function () {
      $(this).removeData('bs.modal');
    });
    $('body').on('hidden.bs.modal', '#confirm-delete', function () {
      $(this).remove();
    });
    </script>
</body>
</html>
